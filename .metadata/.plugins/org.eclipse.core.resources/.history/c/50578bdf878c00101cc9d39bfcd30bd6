package admin.service;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import admin.mapper.AdminMapper;

@Service
public class MainService {
	
	@Autowired
	private AdminMapper mainMapper;
	
	public Map<String, Object> selectUser(Map<String, Object> param){
		return mainMapper.selectUser(param);
	};
	
	public Map<String, Object> detailBoard(Map<String, Object> param){
		return mainMapper.detailBoard(param);
	};
	
	public int insertBoard(Map<String, Object> param){
		return mainMapper.insertBoard(param);
	};
	
	public int updateBoard(Map<String, Object> param){
		return mainMapper.updateBoard(param);
	};
	
	public int deleteBoard(Map<String, Object> param){
		return mainMapper.deleteBoard(param);
	};

	public List<Map<String, Object>> selectBoard(Map<String, Object> param){
		return mainMapper.selectBoard(param);
	};
	
	public List<Map<String, Object>> selectWriter(){
		return mainMapper.selectWriter();
	};
	
	public List<Map<String, Object>> searchPubBoard(Map<String, Object> param){
		return mainMapper.searchPubBoard(param);
	};
	
	public List<Map<String, Object>> searchBoard(Map<String, Object> param){
		return mainMapper.searchBoard(param);
	};
	
	public List<Map<String, Object>> searchProduct(Map<String, Object> param){
		return mainMapper.searchProduct(param);
	};
	
	public List<Map<String, Object>> selectCategory(){
		return mainMapper.selectCategory();
	};
	
	public int idEqualCheck (String name) {
		return mainMapper.idEqualCheck(name);
	}
	
	public int insertSign (Map<String, Object> sign) {
		return mainMapper.insertSign(sign);
	}
	
	public int deleteProduct (Map<String, Object> param) {
		return mainMapper.deleteProduct(param);
	}
	
	public int updateProduct (Map<String, Object> param) {
		return mainMapper.updateProduct(param);
	}
	
	public int insertProduct (Map<String, Object> param) {
		return mainMapper.insertProduct(param);
	}
	
	public List<Map<String, Object>> selectDept(){
		return mainMapper.selectDept();
	};
	
	public List<Map<String, Object>> selectDeptSub(){
		return mainMapper.selectDeptSub();
	};
	
	public List<Map<String, Object>> selectUserDept(Map<String, Object> param){
		return mainMapper.selectUserDept(param);
	};
}
